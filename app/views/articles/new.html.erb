<%= form_for @article do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, 'Body' %>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
